{
  "name": "hexo-site",
  "version": "0.0.0",
  "private": true,
  "scripts": {
  "build:css": "npx tailwindcss -i themes/vuexo/source/css/custom.css -o themes/vuexo/source/css/style.css --minify",
  "build": "npm run build:css && npx hexo generate",
  "clean": "npx hexo clean",
  "deploy": "npm run clean && npm run build && npx hexo deploy",
  "server": "npx hexo server",
  "dev": "npm run build:css && npm run clean && npm run build && npm run server"
  },
  "hexo": {
    "version": "7.3.0"
  },
  "dependencies": {
    "@tailwindcss/cli": "^4.1.11",
    "hexo": "^8.0.0",
    "hexo-cli": "^4.3.2",
    "hexo-deployer-git": "^4.0.0",
    "hexo-generator-archive": "^2.0.0",
    "hexo-generator-category": "^2.0.0",
    "hexo-generator-index": "^4.0.0",
    "hexo-generator-json-content": "^4.2.3",
    "hexo-generator-tag": "^2.0.0",
    "hexo-renderer-ejs": "^2.0.0",
    "hexo-renderer-markdown-it": "^7.1.1",
    "hexo-renderer-stylus": "^3.0.1",
    "hexo-server": "^3.0.0",
    "markdown-it-prism": "^3.0.0",
    "minisearch": "^7.1.2",
    "prismjs": "^1.29.0",
    "vue-router": "^4.5.1"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.11",
    "autoprefixer": "^10.4.21"
  },
  "description": "![Vuexo logo](./themes/vuexo/source/images/vuexo-logo.svg) Vuexo-blog is a modern blogging theme built with Hexo and Vue 3 Composition API. It renders all content via a decoupled Vue SPA, fetching data from JSON generated by Hexo. Features include full-text search, tags, categories, TOC, and GitHub-style comments.",
  "main": "postcss.config.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lichenghsu/vuexo-blog.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/lichenghsu/vuexo-blog/issues"
  },
  "homepage": "https://github.com/lichenghsu/vuexo-blog#readme"
}
